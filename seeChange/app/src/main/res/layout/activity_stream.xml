<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <!--<FrameLayout-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="fill_parent"-->
        <!--android:id="@+id/subscriber_container" />-->
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/publisher_container"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:background="@android:color/darker_gray"
            android:orientation="horizontal"
            android:padding="5dp"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="471dp">

            <ImageView
                android:id="@+id/controlStart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@android:string/VideoView_error_text_invalid_progressive_playback"
                android:src="@drawable/play"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/followers"
                android:layout_width="72dp"
                android:layout_height="18dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/followers"
                app:layout_constraintEnd_toStartOf="@+id/imageView2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="8dp"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@+id/controlStart"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/followers" />

            <TextView
                android:id="@+id/watchers"
                android:layout_width="74dp"
                android:layout_height="19dp"
                android:layout_marginEnd="36dp"
                android:layout_marginTop="8dp"
                android:text="@string/watching"
                app:layout_constraintEnd_toStartOf="@+id/status"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toStartOf="@+id/watchers"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/watching" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#343434"
                android:padding="5dp"
                android:text="@string/status"
                android:textColor="@android:color/background_light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <!--<Button-->
            <!--android:id="@+id/stopStreaming"-->
            <!--android:layout_width="150dp"-->
            <!--android:layout_height="90dp"-->
            <!--android:layout_margin="40dp"-->
            <!--android:padding="15dp"-->
            <!--android:text="Stop streaming"-->
            <!--tools:layout_editor_absoluteX="150dp"-->
            <!--tools:layout_editor_absoluteY="0dp" />-->
        </android.support.constraint.ConstraintLayout>




    </FrameLayout>

</android.support.constraint.ConstraintLayout>